using namespace std;

void main ()

{ int S;
    float A;
    cout<< "Ingrese su salario: ";
	cin >> S;
	if (S < 3600)
      cout<<"Su salario es menos a 3600 la tasa de AFP es de 0 por ciento";
	else
	{
	  A = S*15/100;
	  cout<<"El monto a pagar es:  "<<A;
	}
	getch();
}
